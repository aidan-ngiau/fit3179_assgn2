    "title": "Most Mentioned Animals in UFO Sighting Reports",
    "width": 2000,
    "height": 600,
    "data": {
        "url": "https://raw.githubusercontent.com/aidan-ngiau/fit3179_aliendata/main/animal_counts.csv"
    },
    "transform": [
        {
            "calculate": "{'cow': 'ğŸ„', 'dog': 'ğŸ•', 'bird': 'ğŸ¦', 'horse': 'ğŸ', 'cat': 'ğŸˆ', 'sheep': 'ğŸ–', 'goat': 'ğŸ', 'pig': 'ğŸ–' }[datum.word]",
            "as": "emoji"
        },
        {"window": [{"op": "rank", "as": "rank"}], "groupby": ["word"]}
